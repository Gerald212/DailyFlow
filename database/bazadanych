
habits:
    habit_id: number
    name: text
    description: text
    category_id: categories.id
    hours: number
    times: number
    times_goal: number
    hours_goal: number
    days_goal: number
    completed: boolean

dates:
    habit_id: habits.id
    task_id: tasks.id
    day: text

tasks:
    id: number
    name: text
    description: text
    category: categories.id
    completed: boolean

categories:
    category_id: number
    name: text

    'SELECT * AS "category_name" FROM habits h WHERE habit_id = ? INNER JOIN categories c USING(category_id)'
    'SELECT * FROM habits INNER JOIN categories USING(category_id) WHERE habit_id = ?'